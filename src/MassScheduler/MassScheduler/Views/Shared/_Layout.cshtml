<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>HKS Greenweek 2013 @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
        @Styles.Render("~/css")
        @Scripts.Render("~/scripts/modernizr")
        @RenderSection("headinc", required: false)
    </head>
    <body>
        <div class="wrapper">
            <aside id="sidebar">
                <header role="banner">
                    <h1>@Html.RouteLink("HKS Greenweek 2013", "Default")</h1>
                </header>
                <nav>
                    <ul id="menu" role="navigation">
                        <li>@Html.ActionLink("Schedule", "index", "Meetings")</li>
                        <li>@Html.ActionLink("Speakers", "index", "Speakers")</li>
                    </ul>
                </nav>
            </aside>
            <section class="content" role="main">
                @RenderBody()
            </section>
            <footer>
            </footer>
        </div>
        @Scripts.Render("~/scripts/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
