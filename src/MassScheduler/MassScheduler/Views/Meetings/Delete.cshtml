@model MassScheduler.Models.Meeting

@{
    ViewBag.Title = "Confirm Deletion";
}

<header>
    <h2>@ViewBag.Title</h2>
</header>
<section>
    <h2>Are you sure you want to delete <em>"@Html.DisplayFor(model => model.Title)"</em>?</h2>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <p class="form-controls">
            <input type="submit" value="Delete" /> |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }
</section>