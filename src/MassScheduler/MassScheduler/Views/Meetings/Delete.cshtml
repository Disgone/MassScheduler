@model MassScheduler.Models.Meeting

@{
    ViewBag.Title = "Confirm Event Deletion";
}

<header>
    <h2>@ViewBag.Title</h2>
    <h3>Are you sure you want to delete <em>"@Html.DisplayFor(model => model.Title)"</em>?</h3>
</header>
<section>
    <p>This action is permanent and cannot be undone.</p>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <p class="form-controls">
            <input type="submit" value="Delete" /> |
            @Html.ActionLink("Back to List", "Index")
        </p>
    }
</section>