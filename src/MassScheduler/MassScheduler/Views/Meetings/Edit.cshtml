@model MassScheduler.Models.Meeting

@{
    ViewBag.Title = "Edit Event: " + @Model.Title;
}

<div class="page">
    <span class="heading">
        @Html.ActionLink("Events", "index", "meetings")
    </span>
    <section>
        <header>
            <h1>@ViewBag.Title</h1>
        </header>

        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Event Details</legend>

                @Html.HiddenFor(model => model.Id)

                @Html.Partial("_MeetingFields")

                <p class="form-controls">
                    <input type="submit" value="Save" class="button positive" />
                </p>
            </fieldset>
        }
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/scripts/jqueryval")
    @Scripts.Render("~/scripts/jqueryui")
    <script>
        $('.datepicker').datetimepicker({
            timeFormat: "hh:mm tt",
            minDateTime: new Date()
        });
    </script>
}

@section headinc
{
    @Styles.Render("~/Content/themes/base/css")
}
