@model MassScheduler.Models.Speaker

@{
    ViewBag.Title = "Edit Speaker: " + Model.Name;
}

<div class="page">
    <span class="heading">
        @Html.ActionLink("Speakers", "index", "speakers")
    </span>
    <section>
        <header>
            <h1>Edit Speaker: @Model.Name</h1>
        </header>
        @using (Html.BeginForm("edit", "speakers", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Speaker Details</legend>

                @Html.HiddenFor(model => model.Id)

                @Html.Partial("_SpeakerFields")
            
                <p>
                    <strong>Current Image:</strong><br/>
                    @Html.UploadedImage(Model.Photo)
                </p>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Photo)
                </div>
                <div class="editor-field">
                    @Html.TextBox("Photo", null, new { @type = "file" })
                </div>

                <p class="form-controls">
                    <input type="submit" value="Save Changes" class="button positive" />
                </p>
            </fieldset>
        }
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
