@model MassScheduler.Models.Speaker

@{
    ViewBag.Title = "Confirm Deletion";
}

<div class="page">
    <header>
        <span class="heading">
            @Html.ActionLink("Speakers", "index", "speakers")
        </span>
    </header>
    <section class="speaker confirmation">
        <header>
            <h1>@ViewBag.Title</h1>
            <strong>Are you sure you want to remove "<em>@Model.Name</em>"?</strong>
        </header>
        <p>This action is permanent and cannot be undone.</p>
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            <p class="form-controls">
                <input type="submit" value="Delete Speaker" class="button destructive" />
            </p>
        }
    </section>
</div>